{% extends "LOUVREAppBundle::layout.html.twig" %}

{% block title %} {{ parent() }} - Confirmation de paiement {% endblock %}

{% block stylesheets %} {{ parent() }} {% endblock %}

{% block body %}
    <div class="container">

        <div class="row col-xs-12 col-sm-offset-3 col-sm-6 message-flash">
            {% for message in app.session.flashbag.get('info') %}
                <div class="alert alert-info text-center">{{ message }}</div>
            {% endfor %}
        </div>

        <div id="return-home-button" class="col-xs-offset-1 col-xs-10 col-sm-offset-3 col-sm-6 col-lg-offset-4 col-lg-4">
            <a href="{{ path('louvre_app_home') }}" class="btn btn-primary btn-block text-center">Retour Ã  l'accueil</a>
        </div>

        <div id="social-button">
            <div class="row">
                <div class="col-xs-offset-1 col-xs-10 col-sm-offset-3 col-sm-6 col-lg-offset-4 col-lg-4 text-center">
                    <div id="twitter"> {{ twitterButton() }} </div>
                    <div id="facebook"> {{ facebookButton() }} </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}

{% block javascripts %} {{ parent() }} {% endblock %}