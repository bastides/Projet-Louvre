{% extends "LOUVREAppBundle::layout.html.twig" %}

{% block title %} {{ parent() }} - Commande {% endblock %}

{% block stylesheets %} {{ parent() }} {% endblock %}

{% block body %}
    <div id="container-commandTickets">
    <div class="container">

        <div class="row">
            <div class="col-sm-8 col-md-6 info-area">
                <h4>Veuillez saisir les informations relatives à vos billets.</h4>
            </div>
        </div>

        {{ form_start(formC) }}
        {{ form_errors(formC) }}
        <div class="row">
            {% for ticket in formC.tickets %}
                <div class="col-sm-6 inputs-area">
                    <div class="row form-inline input-formC">
                        {{ form_label(ticket.lastname, "Nom :", {'label_attr': {'class': 'control-label col-sm-12 col-md-5'}}) }}
                        {{ form_widget(ticket.lastname, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(ticket.lastname) }}
                    </div>
                    <div class="row form-inline input-formC">
                        {{ form_label(ticket.firstname, "Prénom :", {'label_attr': {'class': 'control-label col-sm-12 col-md-5'}}) }}
                        {{ form_widget(ticket.firstname, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(ticket.firstname) }}
                    </div>
                    <div class="row form-inline input-formC">
                        {{ form_label(ticket.country, "Pays :", {'label_attr': {'class': 'control-label col-sm-12 col-md-5'}}) }}
                        {{ form_widget(ticket.country, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(ticket.country) }}
                    </div>
                    <div class="row form-inline input-formC">
                        {{ form_label(ticket.birthDate, "Date de naissance :", {'label_attr': {'class': 'control-label col-sm-12 col-md-5'}}) }}
                        {{ form_widget(ticket.birthDate) }}
                        {{ form_errors(ticket.birthDate) }}
                    </div>
                    <div class="row form-inline input-formC">
                        {{ form_label(ticket.reducedPrice, "Tarif réduit :", {'label_attr': {'class': 'control-label     col-md-5'}}) }}
                        {{ form_widget(ticket.reducedPrice) }}
                        {{ form_errors(ticket.reducedPrice) }}
                    </div>
                    <div class="row" id="info-reducedPrice">
                        <P>(Sous présentation de la carte d’étudiant, militaire ou équivalent.)</P>
                    </div>
                </div>
            {% endfor %}
        </div>
            <div class="row col-sm-12">
                {{ form_widget(formC.save, {'attr': {'class': 'col-xs-offset-1 col-xs-10 col-sm-offset-0 col-sm-2 btn btn-primary'}}) }}
            </div>
        {{ form_rest(formC) }}
        {{ form_end(formC) }}
    </div>
    </div>
{% endblock %}

{% block javascripts %} {{ parent() }} {% endblock %}