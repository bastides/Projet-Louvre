{% extends "LOUVREAppBundle::layout.html.twig" %}

{% block title %} {{ parent() }} - Commande {% endblock %}

{% block stylesheets %} {{ parent() }} {% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            {{ form_start(formT) }}
            {{ form_errors(formT) }}

                <div class="row">
                    <div class="form-inline input-formT">
                        {{ form_label(formT.dayBook, "Date de r√©servation :", {'label_attr': {'class': 'control-label col-md-2'}}) }}
                        {{ form_errors(formT.dayBook) }}
                        
                        {{ form_widget(formT.dayBook, {'attr': {'class': 'form-control'}}) }}
                    </div>   
                </div>
                <div class="row">
                    <div class="form-inline input-formT">
                        {{ form_label(formT.type, "Type de billet :", {'label_attr': {'class': 'control-label col-md-2'}}) }}
                        {{ form_errors(formT.type) }}
                        
                        {{ form_widget(formT.type, {'attr': {'class': 'form-control'}}) }}
                    </div>   
                </div>
                <div class="row">
                    <div class="form-inline input-formT">
                        {{ form_label(formT.orderTickets.quantity, "Nombre de billets :", {'label_attr': {'class': 'control-label col-md-2'}}) }}
                        {{ form_errors(formT.orderTickets.quantity) }}
                        
                        {{ form_widget(formT.orderTickets.quantity, {'attr': {'class': 'form-control'}}) }}
                    </div>   
                </div>
                <div class="row">
                    <div class="form-inline input-formT">
                        {{ form_label(formT.orderTickets.email, "Email :", {'label_attr': {'class': 'control-label col-md-2'}}) }}
                        {{ form_errors(formT.orderTickets.email) }}
                        
                        {{ form_widget(formT.orderTickets.email, {'attr': {'class': 'form-control'}}) }}
                    </div>   
                </div>
                <div class="row">
                    {{ form_widget(formT.save, {'attr': {'class': 'col-md-offset-3 col-md-1 btn btn-primary'}}) }}
                </div>
    
            {{ form_rest(formT) }}
            {{ form_end(formT) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %} {{ parent() }} {% endblock %}