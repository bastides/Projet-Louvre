{% extends "LOUVREAppBundle::layout.html.twig" %}

{% block title %} {{ parent() }} - Commande {% endblock %}

{% block stylesheets %} {{ parent() }} {% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            {{ form_start(formOT) }}
            {{ form_errors(formOT) }}

                <div class="row">
                    <div class="form-inline input-formOT">
                        {{ form_label(formOT.ticket.dayBook, "Date de r√©servation :", {'label_attr': {'class': 'control-label col-md-2'}}) }}
                        {{ form_errors(formOT.ticket.dayBook) }}
                        
                        {{ form_widget(formOT.ticket.dayBook, {'attr': {'class': 'form-control'}}) }}
                    </div>   
                </div>
                <div class="row">
                    <div class="form-inline input-formOT">
                        {{ form_label(formOT.ticket.type, "Type de billet :", {'label_attr': {'class': 'control-label col-md-2'}}) }}
                        {{ form_errors(formOT.ticket.type) }}
                        
                        {{ form_widget(formOT.ticket.type, {'attr': {'class': 'form-control'}}) }}
                    </div>   
                </div>
                <div class="row">
                    <div class="form-inline input-formOT">
                        {{ form_label(formOT.quantity, "Nombre de billets :", {'label_attr': {'class': 'control-label col-md-2'}}) }}
                        {{ form_errors(formOT.quantity) }}
                        
                        {{ form_widget(formOT.quantity, {'attr': {'class': 'form-control'}}) }}
                    </div>   
                </div>
                <div class="row">
                    <div class="form-inline input-formOT">
                        {{ form_label(formOT.order.email, "Email :", {'label_attr': {'class': 'control-label col-md-2'}}) }}
                        {{ form_errors(formOT.order.email) }}
                        
                        {{ form_widget(formOT.order.email, {'attr': {'class': 'form-control'}}) }}
                    </div>   
                </div>
                <div class="row">
                    {{ form_widget(formOT.save, {'attr': {'class': 'col-md-offset-3 col-md-1 btn btn-primary'}}) }}
                </div>
    
            {{ form_rest(formOT) }}
            {{ form_end(formOT) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %} {{ parent() }} {% endblock %}